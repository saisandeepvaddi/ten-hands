# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Task {
  id: ID!
  command: String!
  path: String!
  pid: Int!
  running: Boolean!
}

type Query {
  tasks: [Task!]!
}

input NewTask {
  command: String!
  path: String!
}

type Mutation {
  createTask(input: NewTask!): Task!
}
